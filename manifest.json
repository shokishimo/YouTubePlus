{
  "manifest_version": 3,
  "name": "YouTube Plus",
  "version": "0.0.1",
  "description": "YouTubePlus is an extension that enhances your overall youtube experiences",

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "build/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/skipBackBtn.png",
        "assets/skipForwardBtn.png",
        "assets/settingLogo.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popups/disabled.html",
    "default_title": "YouTubePlus"
  }
}