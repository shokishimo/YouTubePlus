{
  "manifest_version": 3,
  "name": "YouTubeFunctionalityExtender",
  "version": "0.0.1",

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "build/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/skipBackBtn.png",
        "assets/skipForwardBtn.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
    },
    "default_popup": "popups/disabled.html",
    "default_title": "Extend YouTube functionalities"
  }
}